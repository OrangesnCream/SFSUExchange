<!--
File: createListing.ejs

Description:
This file represents the create listing page of the SFSU Exchange website.
It includes a form for users to create a new listing, providing fields for product title,
category selection, description, offers (price or items), image upload, and a note about approval time for listings.

Dependencies:
- Includes '../partials/head' for metadata and styles.
- Includes '../partials/header' for the site's header navigation.
-->

<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Include partial head content (SFSUExchange logo) -->
  <%- include('../partials/head'); %>
</head>

<body>
  <!-- Include partial header content (navigation bar) -->
  <header>
    <%- include('../partials/header'); %>
  </header>
  <!-- Main heading for the page -->
  <div class="d-flex justify-content-center align-items-center">
    <h1 class="display-5 mt-5 mb-3 text-center" style="color: rgba(102, 16, 242, 1)">
      Create Listing
    </h1>
  </div>

  <!-- Section for the create post form -->
  <section id="creat post">
    <div class="container-lg">
      <div class="row justify-content-center my-5">
        <div class="col-lg-6">

          <form action="/listing/createlisting/create" method="POST" enctype="multipart/form-data">
            <p class="lead text-end"><small>*Required</small></p>

            <!-- text input for product title -->
            <label for="title" class="form-label mt-2">* Title </label>
            <div class="mb-4 input-group">
              <input type="text" class="form-control" id="title" name="title" placeholder="Product Title Here">
            </div>

            <!-- Dropdown for selecting product category -->
            <label for="category" class="form-label">* Category </label>
            <div class="input-group">
              <select class="form-select" id="category" name="category">
                <option value="all" selected> All</option>
                <option value="electronics">Electronics</option>
                <option value="furniture">Furniture</option>
                <option value="textbooks">Textbooks</option>
              </select>
            </div>

            <!-- text area for product description -->
            <div class="form-floating mb-4 mt-2">
              <textarea id="description" name="description" type="text" class="form-control" style="height: 140px;"></textarea>
              <label for="query">Description of product (Size/ Condition/ Color/ Etc.)</label>
            </div>

            <!-- Section for specifying offers (price or items) -->
            <div><label for="price" class="form-label">Offers </label></div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="flexRadioDefault" value="price" id="flexRadioDefault1">
              <label class="form-check-label" for="flexRadioDefault1">Price</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="flexRadioDefault" value="items" id="flexRadioDefault2" checked>
              <label class="form-check-label" for="flexRadioDefault2">Items</label>
            </div>
            <div class="mb-4 input-group">
              <input type="text" class="form-control" id="price" name="price"
                placeholder="Include items you're interested in bartering for here">
            </div>

            <!-- File input for uploading images -->
            <div class="mb-4">
              <label for="formFileMultiple" class="form-label">Image</label>
              <input class="form-control" name="uploadImage" type="file" id="formFileMultiple" required multiple>
            </div>

            <!-- Notice about approval time  -->
            <p class="text-center"><small>Listing a post may take up to 24 hours to be approved</small></p>
            
            <!-- Button to post the form  -->
            <div class="mb-4 text-center">
              <button type="submit" class="btn btn-dark">Post Listing</button>
            </div>
          </form>
        </div>
      </div>
    </div>

  </section>
</body>

</html>
